<Window x:Class="AppRita_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="CustomerListBox" 
         HorizontalAlignment="Left" 
         VerticalAlignment="Top" 
         Width="200" 
         Height="400"
         DisplayMemberPath="Name"
         MouseDoubleClick="CustomerListBox_MouseDoubleClick"/>

        <TextBox x:Name="CustomerNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="200" Height="30"/>

        <Button Content="Voeg Klant Toe" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="AddCustomer_Click"/>

        <ListBox x:Name="OrderListBox" HorizontalAlignment="Right" VerticalAlignment="Top" Width="300" Height="300"/>
    </Grid>
</Window>